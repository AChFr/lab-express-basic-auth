<h1>sign-up</h1>
<br>
<div>
    <form action="/signUp" method="POST">

        <label for="username">USERNAME:</label><br>
        <input type="text" id="username" name="username" placeholder="choose a username">

        <br><br><br>

        <label for="password">PASSWORD:</label>
        <br>
        <input type="password" id="password" name="pwd1" placeholder="choose a password">

        <br><br><br>

        <label for="passwordconfirm">CONFIRM PASSWORD:</label>
        <br>
        <input type="password" id="passwordconfirm" name="pwd2" placeholder="confirm password">


        <br><br>

        {{#if errorMessage}}
        <div class="error">
            <p>{{errorMessage}}</p>
        </div>
        {{/if}}

</div>
<br><br>

<input class="btn btn-primary " type="submit" value="SIGN UP">
</form>
<br>
<a class="btn btn-primary btn-dark " href="/">Back</a>